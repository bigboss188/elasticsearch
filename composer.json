{
    "name": "joba/elasticsearch",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf",
        "search",
        "elasticsearch"
    ],
    "description": "The Hyperf Elasticsearch package.",
    "authors": [
        {
            "name": "Eric Zhu",
            "email": "eric@zhu.email"
        }
    ],
    "autoload": {
        "psr-4": {
            "HyperfExt\\Elasticsearch\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\Elasticsearch\\": "tests"
        }
    },
    "require": {
        "php": ">=8.1",
        "ext-swoole": ">=5.0",
        "elasticsearch/elasticsearch": "^7.0",
        "hyperf/config": "~3.1.0",
        "hyperf/di": "~3.1.0",
        "hyperf/framework": "~3.1.0",
        "hyperf/guzzle": "~3.1.0",
        "hyperf/pool": "~3.1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "hyperf/testing": "~3.1.0",
        "phpstan/phpstan": "^1.0",
        "swoole/ide-helper": "dev-master",
        "mockery/mockery": "^1.0"
    },
    "suggest": {
        "hyperf/logger": "Allows for client-level logging and tracing"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "co-phpunit --prepend tests/bootstrap.php -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "HyperfExt\\Elasticsearch\\ConfigProvider"
        }
    }
}
